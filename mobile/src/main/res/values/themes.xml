--><!--
	Resource file containing themes used for Activities across the application.
	This file can contain also 'overlay' themes that are used to apply a specific theme attributes
	only to a particular widget.
-->
<resources>

	<!-- Default application theme. -->
	<style name="Theme" parent="Base.Theme">

		<item name="uiSpacingSecondary">@dimen/ui_spacing_secondary</item>
		<item name="uiSpacingTertiary">@dimen/ui_spacing_tertiary</item>

		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<style name="Theme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="android:windowActionBar">?attr/windowActionBar</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowNoTitle">?attr/windowNoTitle</item>
	</style>

	<style name="Theme.Toolbar" parent="Theme.NoActionBar" />

	<style name="Theme.Welcome" parent="Theme.NoActionBar"/>

	<style name="Theme.Observation" parent="Theme.Toolbar">

	</style>
</resources>
