<!--
	Resource file containing TextAppearance styles used across the application.
	Note that this file should contain only globally used text appearances to stay brief and readable.
	Do not specify here text appearance styles for each and every one text widget just to keep layout
	resource files brief and small.
-->
<resources>

	<!-- AVAILABLE FONT FAMILIES

		Roboto regular                  [sans-serif]
		Roboto italic                   [sans-serif]
		Roboto bold                     [sans-serif]
		Roboto bold italic              [sans-serif]
		Roboto-Light                    [sans-serif-light]
		Roboto-Light italic             [sans-serif-light]
		Roboto-Thin                     [sans-serif-thin] (since Android 4.2)
		Roboto-Thin italic              [sans-serif-thin] (since Android 4.2)
		Roboto-Condensed                [sans-serif-condensed]
		Roboto-Condensed italic         [sans-serif-condensed]
		Roboto-Condensed bold           [sans-serif-condensed]
		Roboto-Condensed bold italic    [sans-serif-condensed]
		Roboto-Medium                   [sans-serif-medium] (since Android 5.0)
		Roboto-Medium italic            [sans-serif-medium] (since Android 5.0)

	-->

	<!-- ### APPLICATION ======================================================================= -->

	<style name="TextAppearance.Widget.TextView" parent="android:TextAppearance.Material.Widget.TextView" />

	<style name="TextAppearance.Widget.TextView.Participant.Label" parent="TextAppearance.Widget.TextView">
		<item name="android:textSize">24sp</item>
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>

	<!-- ### OBSERVATION ======================================================================= -->

	<style name="TextAppearance.Widget.Toolbar.Observation.ActualValue" parent="TextAppearance.Widget.TextView">
		<item name="android:textColor">#C8FFFFFF</item>
		<item name="android:textSize">40sp</item>
		<item name="android:fontFamily">sans-serif-light</item>
	</style>
</resources>