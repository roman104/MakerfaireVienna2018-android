<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	   xmlns:app="http://schemas.android.com/apk/res-auto"
	   xmlns:tools="http://schemas.android.com/tools"
	   tools:context=".observation.view.ObservationActivity">

	<universum.studios.android.ui.widget.ViewPagerWidget
		android:id="@+id/pager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:uiPageMargin="8dp"
		app:uiPageMarginDrawable="@drawable/pg_margin" />

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|end"
		android:layout_margin="?attr/uiSpacingSecondary"
		android:src="@drawable/vc_ic_add_24dp"
		android:visibility="gone"
		app:fabSize="normal" />

	<FrameLayout
		android:id="@id/ui_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
</merge>